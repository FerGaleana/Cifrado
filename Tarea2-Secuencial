/*Tarea 2 PMD
 * Hilos
 * Soluci√≥n secuencial-Calculadora de Pi(10 decimales)
 */

#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(){
	double pi=0;
	long long i;
	clock_t start=clock();
	for(i=1;i<=50000000000;i++){
		if(((i+1)%2)==0){
			pi+=(4/(2*(float)i-1));
			printf("%I64d\n",i);
		}
		else{
			pi-=(4/(2*(float)i-1));
			printf("%I64d\n",i);
		}
	}
	clock_t stop=clock();
	int tiempo=1000*(stop-start)/CLOCKS_PER_SEC;
	printf("Pi=%.10lf\n",pi);
	printf("Tiempo: %d ms",tiempo);

	return 0;
}
